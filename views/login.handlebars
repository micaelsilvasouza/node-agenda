 {{>_header}}

<main>
    <article >
        <section id="login">
            <form action="/validar-usuario" method="post">
                <h1>Login</h1>
                <div>
                    <label for="email-login">Email</label>
                    <input type="email" id="email-login" name="email" required>
                </div>
                <div>
                    <label for="password-login">Senha</label>
                    <input type="password" id="password-login" name="password" minlength="8" maxlength="20" required>
                </div>
                <div>
                    <button type="submit">Entrar</button>
                </div>
                <div><a href="#register">Criar Cadastro</a></div>
                
            </form>
        </section>
        <section id="register">
            <form action="/cadastrar-usuario" method="post">
                <h1>Cadastrar</h1>
                <div>
                    <label for="username">Nome de UsuÃ¡rio</label>
